<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="XTextLogo">
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textSize">@dimen/text_size_logo</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="XTextPrimary">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="XTextCaption" parent="XTextPrimary">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="XTTextSecondary" parent="XTextPrimary">
        <item name="android:alpha">0.5</item>
    </style>

    <style name="XTextSecondaryCaption" parent="XTTextSecondary">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="XTextToolbar" parent="XTextLogo">
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

</resources>
