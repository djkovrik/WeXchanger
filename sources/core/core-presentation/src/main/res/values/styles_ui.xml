<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- BASE -->

    <style name="XTPrimary">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="XTLabel" parent="XTPrimary">
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="XTLogo" parent="XTPrimary">
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textSize">@dimen/text_size_logo</item>
    </style>


    <!-- BUTTONS -->

    <style name="XTButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="cornerRadius">@dimen/corner_radius_button</item>
    </style>

    <style name="XTButtonNormal" parent="XTButton">
        <item name="android:paddingStart">@dimen/padding_button_normal</item>
        <item name="android:paddingEnd">@dimen/padding_button_normal</item>
    </style>

    <style name="XTButtonWide" parent="XTButton">
        <item name="android:paddingStart">@dimen/padding_button_wide</item>
        <item name="android:paddingEnd">@dimen/padding_button_wide</item>
    </style>

    <style name="XTButtonOutlinedNormal" parent="XTPrimary">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <style name="XTButtonOutlinedWide" parent="XTPrimary">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:paddingStart">@dimen/padding_button_small</item>
        <item name="android:paddingEnd">@dimen/padding_button_small</item>
        <item name="android:paddingTop">@dimen/padding_button_vertical</item>
        <item name="android:paddingBottom">@dimen/padding_button_vertical</item>
    </style>

    <style name="XTButtonStateText" parent="XTPrimary">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <!-- TEXT -->

    <style name="XTText" parent="XTPrimary">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="XTTextNormal" parent="XTText" />

    <style name="XTTextSecondary" parent="XTText">
        <item name="android:alpha">0.5</item>
    </style>

    <style name="XTTextChooser" parent="XTText">
        <item name="android:textSize">@dimen/text_size_chooser</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="XTTextHeader" parent="XTText">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="XTTextToolbar" parent="XTLogo">
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>


    <!-- NOTIFICATION -->

    <style name="XTNotificationText">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="XTNotificationButton">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

</resources>
