<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- BASE -->

    <style name="XTPrimary">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="XTLogo" parent="XTPrimary">
        <item name="android:fontFamily">@font/exo_2</item>
        <item name="android:textSize">@dimen/text_size_logo</item>
    </style>

    <style name="XTButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>

    <!-- BUTTONS -->

    <style name="XTButtonRounded" parent="XTButton">
        <item name="android:paddingStart">@dimen/padding_button_small</item>
        <item name="android:paddingEnd">@dimen/padding_button_small</item>
        <item name="cornerRadius">@dimen/corner_radius_button_big</item>
    </style>

    <style name="XTButtonOutlined" parent="XTPrimary">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <style name="XTButtonStateText" parent="XTPrimary">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <!-- TEXT -->

    <style name="XTText" parent="XTPrimary">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="XTTextNormal" parent="XTText" />

    <style name="XTTextSecondary" parent="XTText">
        <item name="android:alpha">0.5</item>
    </style>

    <style name="XTTextChooser" parent="XTText">
        <item name="android:textSize">@dimen/text_size_chooser</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="XTTextHeader" parent="XTText">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="XTTextToolbar" parent="XTLogo">
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="XTTextTickerCurrency" parent="XTTextNormal">
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="XTTextTickerPrice" parent="XTTextNormal">
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="XTTextTickerExchange" parent="XTTextSecondary">
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="XTTextTickerPercent" parent="XTTextNormal">
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="XTTextTickerTime" parent="XTTextSecondary">
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <!-- NOTIFICATION -->

    <style name="XTNotificationText">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

</resources>
