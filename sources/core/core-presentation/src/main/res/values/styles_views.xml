<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="XTButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorNormalButtonText</item>
        <item name="android:backgroundTint">@color/colorNormalButtonBackground</item>
        <item name="cornerRadius">@dimen/corner_radius_button</item>
    </style>

    <style name="XTButtonNormal" parent="XTButton">
        <item name="android:paddingStart">@dimen/padding_button_normal</item>
        <item name="android:paddingEnd">@dimen/padding_button_normal</item>
    </style>

    <style name="XTButtonWide" parent="XTButton">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:paddingStart">@dimen/padding_button_wide</item>
        <item name="android:paddingEnd">@dimen/padding_button_wide</item>
    </style>

    <style name="XTButtonTextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorOutlinedButtonText</item>
    </style>

    <style name="XTNotificationText">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="XTNotificationButton">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="XTButtonOutlined" parent="XTextPrimary">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_button_outlined</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:paddingStart">@dimen/padding_button_small</item>
        <item name="android:paddingEnd">@dimen/padding_button_small</item>
        <item name="android:paddingTop">@dimen/padding_button_vertical</item>
        <item name="android:paddingBottom">@dimen/padding_button_vertical</item>
    </style>

</resources>
